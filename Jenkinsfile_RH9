pipeline {
  agent {
     node { 
        label 'Alma9'
        } 
  }
  triggers {
  cron('H H(0-3) * * *')
  }
  stages {
    stage('Checkout scm') {
      steps {
        git 'eolJenkins:ncar/RAF_nightly'
      }
    }
    stage('Build') {
      steps {
        sh 'git submodule update --init --recursive'
        sh('./build_all.sh')
      }
    }
  }
  post {
    failure {
      emailext to: "cjw@ucar.edu janine@ucar.edu cdewerd@ucar.edu",
      subject: "Jenkinsfile RAF_nightly build failed",
      body: "See console output attached",
      attachLog: true
    }
  }
  options {
    buildDiscarder(logRotator(numToKeepStr: '10'))
  }
}
